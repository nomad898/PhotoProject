@model ICollection<PhotoProject.WEB.Models.CommentViewModel>

<div id="comments">  
    <br />
    <h2> Comments</h2>
    @if (Model.Count() == 0)
    {
        <h6> There are no comments</h6>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="comment-node">
                <h4>@item.UserName</h4>
                <p>@item.CreatedAt</p>
                <p>@item.Content</p>
            </div>
        }
    }
</div>