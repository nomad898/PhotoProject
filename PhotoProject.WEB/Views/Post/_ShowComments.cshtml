@model ICollection<PhotoProject.WEB.Models.CommentViewModel>

<div id="comments">  
    <br />
    <h2 class="text-field"> Comments</h2>
    @if (Model.Count() == 0)
    {
        <h6> There are no comments</h6>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="comment-node">
                <h4 class="text-field">@item.UserName  @item.CreatedAt</h4>       
                <p class="text-field">@item.Content</p>
            </div>
        }
    }
</div>