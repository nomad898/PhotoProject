@model ICollection<PhotoProject.WEB.Models.UserViewModel>
@using PhotoProject.WEB.Util.Helpers
@{
    ViewBag.Title = "Admin";
}

<h2 class="text-field">Admin page</h2>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            Users
        </div>
        <table class="table table-striped">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Avatar</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">There is no users</td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>
                            @Html.Image(user.Avatar, "img-cls", new { width = "200", height = "200" })
                        </td>
                        <td>
                            @using (Html.BeginForm("Delete", "Admin", new { id = user.Id }))
                            {

                                @Html.ActionLink("Edit", "Edit", new { id = user.Id },
                            new { @class = "btn btn-info btn-xs", style = "float: left; margin-right: 10px" })

                                <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                            }
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>